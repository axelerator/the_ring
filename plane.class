#include "vec3.h"

class Plane
#include <GL/glu.h>

float width;
float height;
unsigned int u_steps;
unsigned int v_steps;
Vec3 origin;

constructor(float width, float height, Vec3& origin)
: width(width), height(height), u_steps(10), v_steps(10), origin(origin)
  ;

public void draw()
  glPushMatrix();
  glTranslatef(origin[0], origin[1], origin[2]);
  glBegin(GL_QUADS);
  float u_offset = -0.5, v_offset = -0.5;
  float u_step = 1.0/u_steps;
  float v_step = 1.0/v_steps;
  unsigned int u,v;
  for (u=0; u < u_steps; ++u) {
    v_offset = -0.5;
    for (v=0; v < v_steps; ++v) {
      glNormal3f(0.0, 1.0, 0.0);
      glVertex3f(u_offset, 0.0, v_offset);
      glVertex3f(u_offset + u_step, 0.0, v_offset);
      glVertex3f(u_offset + u_step, 0.0, v_offset + v_step);
      glVertex3f(u_offset , 0.0, v_offset + v_step);
      v_offset += v_step;
    }
    u_offset += u_step;
  }
  glEnd();
  glPopMatrix();

