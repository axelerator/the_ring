
class Helper

#include "vec3.h"
#include <GL/gl.h>

#include <math.h>
#include <stdlib.h>
#include <iostream>


public void draw()
  glDisable(GL_LIGHTING);
  glPushMatrix();
  glScalef(0.5, 0.5, 0.5);
  glBegin(GL_LINES);
    glColor3f(1.0, 1.0, 1.0);
    glVertex3f(0.0, -1.0, 0.0);
    glVertex3f(0.0, 1.0, 0.0);
    glColor3f(0.3, 0.3, 0.6);
    glVertex3f( 1.0, -1.0,  1.0);
    glVertex3f( 1.0,  1.0,  1.0);
    glVertex3f( 1.0, -1.0, -1.0);
    glVertex3f( 1.0,  1.0, -1.0);
    glVertex3f(-1.0, -1.0,  1.0);
    glVertex3f(-1.0,  1.0,  1.0);
    glVertex3f(-1.0, -1.0, -1.0);
    glVertex3f(-1.0,  1.0, -1.0);
  glEnd();
  glPopMatrix();

